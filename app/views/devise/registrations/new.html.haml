.contents.row
  .container
    .titleBox
      %h3 新規会員登録
      = link_to "すでに会員登録済みの方はこちら", new_user_session_path, class:"nav"
    .twitter-login
      = link_to  user_twitter_omniauth_authorize_path do
        .twitter--box
          %i.fab.fa-twitter
          %span Twitterを利用して新規登録をする
    .inner
      .separate
    .titleBox
      %h4 メールアドレスを利用して新規登録をする
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = render "flash"
      .field
        = f.label :name, "ユーザー名"
        %br/
        = f.text_field :name, autofocus: true, required: "required"
      .field
        = f.label :email, "登録するメールアドレス"
        %br/
        = f.email_field :email
      .field
        = f.label :password
        - if @validatable
          %em
            (#{@minimum_password_length} characters minimum)
        %br/
        = f.password_field :password, autocomplete: "off"
      /
        <div class="field">
        <haml_loud> f.label :password_confirmation </haml_loud><br />
        <haml_loud> f.password_field :password_confirmation, autocomplete: &quot;off&quot; </haml_loud>
        </div>
      .actions
        = f.submit "登録", class:"register-btn"
