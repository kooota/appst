<div class="contents row">
  <div class="container2">
    <%= form_for @user, method: :patch do |f|%>
      <div class="titleBox new">
        <h3>
          プロフィールを編集する
        </h3>
      </div>
      <label class="st-Form_label">名前</label>
      <%= f.text_field :name, class:"postContent" %>

      <label class="st-Form_label">会社名</label>
      <%= f.text_field :company, class:"postContent"%>

      <label class="st-Form_label">職種</label>
      <%= f.text_field :position, class:"postContent"%>

      <label class="st-Form_label">プロフィール画像</label>
      <div>
        <%= image_tag @user.image, class:"user-Image_confirmation" %>
      </div>
      <%= f.file_field :image, class:"postContent"%>
      <%= f.hidden_field :image_cache %>

      <label class="st-Form_label">自己紹介</label>
      <%= f.text_area :description, class:"postContent", rows:"5"  %>

      <label class="st-Form_label">Twitter ID</label>
      <div class="st-Form_group">
        <div class="st-Form_groupBefore">
          https://twitter.com/
        </div>
        <%= f.text_field :nickname, class:"postContent st-Form_groupText", style:"margin: 0; border-radius: 0;" %>
      </div>

      <label class="st-Form_label">Facebook ID</label>
      <div class="st-Form_group">
        <div class="st-Form_groupBefore">
          https://facebook.com/
        </div>
        <%= f.text_field :facebook, class:"postContent st-Form_groupText",style:"margin: 0; border-radius: 0;" %>
      </div>
<!--       <%= f.text_field :note, class:"postContent st-Form_groupBefore",placeholder:"noteアカウント"  %> -->
      <%= f.submit "更新", style: "background-color: #80CACA;"  %>
    <% end %>
  </div>
</div>
