<div class="container1">
  <div class="content1 clearfix">


    <div class="user-header">
      <div class="user-header-content clearfix">
        <div class="user-image-container">
          <div class="user-image">
            <%= image_tag @user.image %>
          </div>
        </div>

        <div class="user-info">
          <div class="user-name">
            <span><%= @user.name %></span>

            <% unless @user.nickname == "" || @user.nickname.nil? %>
              <%= link_to "https://twitter.com/#{@user.nickname}", target:"_blank" do %>
                <span class="profile-twitter"><i class="fab fa-twitter"></i></span>
              <% end %>
            <% end %>
            <% unless @user.facebook == "" || @user.facebook.nil? %>
              <%= link_to "https://facebook.com/#{@user.facebook}",target:"_blank" do %>
                <span class="profile-facebook"><i class="fab fa-facebook"></i></span>
              <% end %>
            <% end %>

          </div>
          <div class="user-company">
            <span><%= @user.company %></span>
            <span><%= @user.position %></span>
          </div>
          <div class="user-introduction">
            <span><%= simple_format(@user.description) %></span>
          </div>
        </div>
        <% if user_signed_in? && current_user.id == @user.id %>
          <div class="user-edit">
            <%= link_to "/users/#{@user.id}/edit" do %>
              <span class="edit-btn">EDIT</span>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>


    <div class="fav">
      <h3><%= @name %> FAVORITES</h3>
    </div>

  <div class="postsList">
    <% @post.each do |post| %>
    <%= link_to "/posts/#{post.id}" do %>
      <div class="post">
       <div class="post-in">

        <div class="post-thumnail">
          <%= image_tag post.image, class:"post-img" %>
        </div>

        <% if user_signed_in? && current_user.id == post.user_id %>
          <div class="more">
              <span><i class="fas fa-angle-down"></i></span>
              <ul class="more_list">
                  <li class="more-edit">
                    <%= link_to '編集', "/posts/#{post.id}/edit", method: :get, class:"more-edit" %>
                  </li>
                  <li>
                    <%= link_to '削除', "/posts/#{post.id}", method: :delete, data: { confirm: 'この投稿を削除しますか？' }, class:"more-delete" %>
                  </li>
              </ul>
            </div>
        <% end %>
    <% end %>

    <%= link_to "/posts/#{post.id}" do %>

        <div class="post-title">
          <span><%= post.title %></span>
        </div>

        <div class="post-subtitle">
          <span><%= post.subtitle %></span>
        </div>

        <div class="post-date clearfix">
          <%= link_to "/categories/#{post.category_id}" do %>
          <div class="category">
            <span><%= post.category.name %></span>
          </div>
          <% end %>
          <div class="service-link">
            <%= link_to post.service_url, target:"_blank" do %>
            <i class="fas fa-link"></i>
            <% end %>
          </div>
        </div>

        <div class="overview">
          <div id="likes-count" class="likes-count-<%= post.id %>">
            <%= render partial: "/likes/like", locals: {post: post, likes: @likes, like: @like} %>

          </div>
          <%= link_to "/posts/#{post.id}" do %>
            <div class="comments-count">
              <i class="fas fa-comment-alt"></i>
              <span><%= post.comments.count %> </span>
            </div>
          <% end %>
       </div>


        <div class="sp-overview clearfix">
          <%= link_to "/users/#{post.user.id}" do %>
          <div class="sp-post-user-image">
            <span><%= image_tag post.user.image, class:"post-user-image" %></span>
          </div>
          <% end %>

          <div class="sp-post-date clearfix">
            <%= link_to "/categories/#{post.category_id}" do %>
              <div class="category">
                <span><%= post.category.name %></span>
              </div>
            <% end %>
          </div>
          <div class="sp-likes-comments clearfix">
             <div id="sp-likes-count" class="sp-likes-count-<%= post.id %>">
              <%= render partial: "/likes/splike", locals: {post: post, posts: @posts, likes: @likes, like: @like} %>
            </div>

          </div>
        </div>

<!--         <div class="destroy">
          <%= link_to "削除", "/posts/#{post.id}", method: :delete %>
        </div> -->
       </div>
      </div>
    <% end %>
    <% end %>
    </div>
  </div>
</div>

<div class="page-load-status">
    <%= paginate @post %>
</div>
