<head>
    <% twitter_card = get_twitter_card_info(@post ? @post : nil) %>
    <meta name="twitter:card" content=<%=twitter_card[:card]%> />
    <meta name="twitter:site" content=<%=twitter_card[:site]%> />
    <meta property="og:url" content=<%=twitter_card[:url]%> />
    <meta property="og:title" content=<%=twitter_card[:title]%> />
    <meta property="og:description" content=<%=twitter_card[:description]%> />
    <meta property="og:image" content=<%=twitter_card[:image]%> />
</head>

<div class="container1">
  <div class="content clearfix">

  <div class="ad-top clearfix">
    <!-- 【レスポンシブ】Ad LEFT -->
    <div class="adleft">
      <div class="sponsor-text">Sponsored Link</div>
      <hr class="clear">
      <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
      <ins class="adsbygoogle"
            style="display:inline-block;width:336px;height:280px"
            data-ad-client="ca-pub-9870776519307971"
            data-ad-slot="9229357761"
        data-ad-format="rectangle"></ins>
      <script>
        (adsbygoogle = window.adsbygoogle || []).push({});
      </script>
      </div>

  <!-- 【レスポンシブ】Ad RIGHT -->
    <div class="adright">
          <div class="sponsor-text">Sponsored Link</div>
          <hr class="clear">
        <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
    <ins class="adsbygoogle"
      style="display:block"
      data-ad-client="ca-pub-9870776519307971"
      data-ad-slot="7970378309"
      data-ad-format="rectangle"></ins>
    <script>
      (adsbygoogle = window.adsbygoogle || []).push({});
    </script>
    </div>
    <!-- / .kiziad --></div>

    <div class="service-header clearfix">
      <div class="header-content clearfix">
        <div class="service-thumnail">
          <div class="thumnail-content">
            <%= image_tag @post.image.to_s, class:"img" %>
          </div>
        </div>

        <div class="header-info">
          <div class="service-title">
            <%=@post.title %>
          </div>
          <div class="service-subtitle">
            <%=@post.subtitle %>
          </div>
          <%= link_to "/categories/#{@post.category_id}" do %>
          <div class="service-category">
            <span><%= @post.category.name %></span>
          </div>
          <% end %>
        </div>

      </div>

    </div>

    <div class="main-container">
      <div class="primary-content">

        <section class="box-thumnail">
          <div class="canvas">
            <%= image_tag @post.image.to_s, class:"img" %>
          </div>

          <!-- sp contents-->
            <div class="mobile-header-content clearfix">
              <div class="service-thumnail">
                <div class="thumnail-content">
                  <%= image_tag @post.image.to_s, class:"img" %>
                </div>
              </div>

              <div class="header-info">
                <div class="service-title">
                  <%=@post.title %>
                </div>
                <div class="service-subtitle">
                  <%=@post.subtitle %>
                </div>
                <%= link_to "/categories/#{@post.category_id}" do %>
                  <div class="service-category">
                    <span><%= @post.category.name %></span>
                  </div>
                <% end %>
              </div>
            </div>
          <!-- sp contents-->

          <div class="thumnails">
          </div>
        </section>

        <div class="box-title">
          <h2><i class="fas fa-check-circle"></i>サービス概要</h2>
        </div>
        <section class="box-about">
          <div class="description">
            <%= simple_format(@post.content) %>
          </div>
        </section>

      <% unless @post.relateds %>
        <div class="box-title">
          <h2><i class="fas fa-star"></i>関連リンク</h2>
        </div>
        <section class="box-related">
          <div class="relateds">
          </div>
        </section>
      <% end %>

        <div class="box-title">
          <h2><i class="fas fa-comments"></i>コメント</h2>
        </div>
        <section class="box-comment">
          <div class="people-container clearfix">
            <div class="poster-box">
              <span class="pos-div">このサービスを投稿してくれた人</span>
              <div class="poster">
                <%= link_to "/users/#{@post.user.id}" do %>
                  <div class="people-userImg">
                    <%= image_tag @post.user.image.to_s, class:"userImg" %>
                  </div>
                  <div class="poster-name">
                    <%= @post.user.name %>
                  </div>
                <% end %>
              </div>
            </div>

<!--             <div class="developer-box">
              <span class="pos-div">サービス提供者</span>
              <div class="developer">
                <%= link_to "/users/#{@post.user.id}" do %>
                  <div class="people-userImg">
                    <%= image_tag @post.user.image, class:"userImg" %>
                  </div>
                  <div class="developer-name">
                    <%= @post.user.name %>
                  </div>
                <% end %>
              </div>
            </div> -->
          </div>


          <%= render partial: "comments", locals:{ post: @post, comments: @comments} %>
        </section>
      </div>
    </div>

    <aside>
       <div class="sub-content">
        <%= render partial: "side", locals: {post: @post, posts: @posts, likes: @likes, like: @like} %>
       </div>
    </aside>

  </div>
</div>
