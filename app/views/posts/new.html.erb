<div class="contents row 1">
  <div class="container2">
    <%= form_for @post do |f|%>
      <div class="titleBox new">
        <h3>
          プロダクトを投稿する
        </h3>
      </div>
      <%= f.text_field :title, class:"postContent", placeholder:"サービス名" %>
      <%= f.text_field :subtitle, class:"postContent", placeholder:"サービスの簡単な説明(32文字以内)", maxlength:32 %>
      <%= f.text_field :service_url, class:"postContent", placeholder:"サービスURL" %>

      <%= f.text_field :image, class:"postContent", placeholder:"サービス画像URL" %>

      <%= f.text_field :appstore_url, class:"postContent",placeholder:"App Store URL" %>
      <%= f.text_field :googleplay_url, class:"postContent",placeholder:"Google Play URL" %>
      <%= f.text_area :content, class:"postContent",placeholder:"サービス概要"  %>

      <%= f.select :category_id, [["テクノロジー", "1"],["トラベル", "2"]],class:"postContent", prompt:"カテゴリーを選択" %>

      <%= f.fields_for :relateds do |i| %>
        <%= i.text_field :related_link, class:"postContent",placeholder:"関連記事"  %>
      <% end %>

      <%= f.text_field :twitter, class:"postContent",placeholder:"Twiiterアカウント"  %>
      <%= f.text_field :facebook, class:"postContent",placeholder:"Facebookアカウント"  %>
      <%= f.submit "投稿" %>
    <% end %>
  </div>
</div>
