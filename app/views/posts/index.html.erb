<% unless user_signed_in? %>
  <div class="mainview">
    <div class="top-logo">
      <%= image_tag "apst-logo.jpg" %>
    </div>
    <p style="font-weight: bold;">『AppsTimes』は、最新・人気のWEBサービス・プロダクトが集まるメディア。<br>
    自分が作ったプロダクト、好きなサービス、わくわくするサービスを共有しよう！</p>
  </div>
<% end %>

  <% if user_signed_in? %>
    <div class="adjust">
    </div>
  <% end %>

  <div class="pc-head-banner container">
    <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
    <!-- 【PC】TOP -->
    <ins class="adsbygoogle"
         style="display:inline-block;width:970px;height:90px"
         data-ad-client="ca-pub-9870776519307971"
         data-ad-slot="9157678259"></ins>
    <script>
    (adsbygoogle = window.adsbygoogle || []).push({});
    </script>
  </div>

  <div class="sp-head-banner container">
    <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
    <!-- 【モバイル】TOP/カテゴリー/ランキング -->
    <ins class="adsbygoogle"
         style="display:inline-block;width:320px;height:50px"
         data-ad-client="ca-pub-9870776519307971"
         data-ad-slot="9628273935"></ins>
    <script>
    (adsbygoogle = window.adsbygoogle || []).push({});
    </script>
  </div>


<div class="container1 top">
  <% if user_signed_in? %>
    <div class="content clearfix">

      <div class="date clearfix">
        <h3 class="rank-header"><i class="fas fa-trophy"></i>週間ランキング (<%=@begin%>〜<%=@end%>)</h3>
          <%= link_to "ranking", class:"pc-see-more", target:"_blank" do %>
            <i class="fas fa-arrow-right"></i>もっと見る
          <%end%>
      </div>

      <div class="rankPostsList clearfix">
        <%= render partial: "rank" , locals: {post: @post, rank: @rank, likes: @likes, like: @like} %>
      </div>

      <div class="sp-see-more">
          <%= link_to "ranking", target:"_blank" do %>
            <i class="fas fa-arrow-right"></i>もっと見る
          <%end%>
      </div>

      <div class="date">
        <h3><i class="fas fa-flag"></i>新着プロダクト一覧</h3>
      </div>


      <div class="postsList clearfix">
        <%= render partial: "posts", locals: {posts: @posts, post: @post, likes: @likes, like: @like} %>
      </div>
    </div>

  <% else %>


      <div class="date clearfix">
        <h3 class="rank-header"><i class="fas fa-trophy"></i>週間ランキング (<%=@begin%>〜<%=@end%>)</h3>
        <%= link_to "ranking", class:"pc-see-more", target:"_blank" do %>
        <i class="fas fa-arrow-right"></i>もっと見る
        <%end%>
      </div>

      <div class="rankPostsList clearfix">
        <%= render partial: "rank" , locals: {post: @post, rank: @rank, likes: @likes, like: @like} %>
      </div>

      <div class="sp-see-more">
          <%= link_to "ranking", target:"_blank" do %>
            <i class="fas fa-arrow-right"></i>もっと見る
          <%end%>
      </div>


    <div class="content1 clearfix">
      <div class="date">
        <h3><i class="fas fa-flag"></i>新着プロダクト一覧</h3>
      </div>

      <div class="postsList clearfix">
        <%= render partial: "posts", locals: {posts: @posts, post: @post, likes: @likes, like: @like} %>
      </div>
    </div>
  <% end %>

</div>
