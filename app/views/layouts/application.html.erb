<!DOCTYPE html>
<html>
<head>
  <title>AppsTimes</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag    'icomoon/icomoon_style.css', media: 'all', 'data-turbolinks-track' => true %>

  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href="https://use.fontawesome.com/releases/v5.0.6/css/all.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css?family=Lato|Quicksand" rel="stylesheet">


  <meta name="viewport" content="width=device-width,initial-scale=1.0">

  <!-- Global site tag (gtag.js) - Google Analytics -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=UA-108095747-1"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());

    gtag('config', 'UA-108095747-1');
  </script>
  <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
  <script>
       (adsbygoogle = window.adsbygoogle || []).push({
            google_ad_client: "ca-pub-9870776519307971",
            enable_page_level_ads: true
       });
  </script>

</head>
<body>

  <!-- FB share -->
  <div id="fb-root"></div>
  <script>(function(d, s, id) {
    var js, fjs = d.getElementsByTagName(s)[0];
    if (d.getElementById(id)) return;
    js = d.createElement(s); js.id = id;
    js.src = 'https://connect.facebook.net/ja_JP/sdk.js#xfbml=1&version=v3.2&appId=140825753239326&autoLogAppEvents=1';
    fjs.parentNode.insertBefore(js, fjs);
  }(document, 'script', 'facebook-jssdk'));</script>

  <header>
    <div class="header clearfix">

<!--       <div class="search">
        <div class="searchContainer">
          <span class="searchIcon">
            <i class="fas fa-search"></i>
          </span>
          <input type="" name="" class="headerSearch">
        </div>
      </div> -->

      <div class="atLogo">
        <%= link_to "/" do %>
          <%= image_tag "apst-logo.jpg", class:"logo-img" %>
        <% end %>
      </div>


      <div class="userNav">
        <% if user_signed_in? %>

          <div class="postProduct">
            <%= link_to "/posts/new" do %>
              <span>投稿する</span>
            <% end %>
          </div>



      <div class="accbox">
          <div class="box-userImg1">
            <label for="label1">
              <div class="userImg">
                <%= image_tag current_user.image %>
              </div>
            </label>
            <input type="checkbox" id="label1" class="cssacc" />
            <div class="accshow">
            <div class="mypage">
              <%= link_to "/users/#{current_user.id}" do%>
                <span><%= current_user.name %></span>
                <div style="font-size: 11px;">
                  マイページ
                </div>
              <% end %>
            </div>

             <%= link_to "ログアウト", destroy_user_session_path, class:"logout",method: :delete%>
            </div>
          </div>
        </div>


        <% else %>

          <div class="signIn">
            <%= link_to new_user_session_path do %>
              <span>ログイン</span>
            <% end %>
          </div>
          <div class="signUp">
            <%= link_to new_user_registration_path do %>
              <span>新規登録</span>
            <% end %>
          </div>
        <% end %>

      </div>
    </div>

<% if @categories %>
    <div class="globalNav">
      <div class="horizontal_scroll clearfix">
        <% @categories.each do |category| %>
          <%= link_to "/categories/#{category.id}", method: :get do%>
            <div class="globalNav_item">
              <span><%= category.name %></span>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
<% end %>

  </header>

<%= yield %>

  <footer>
    <div class="info-box clearfix">
      <div class="lists clearfix">
        <%= link_to "https://advance-p.net/aboutus/", target:"_blank" do %>
        <span class="info-list">運営会社</span>
        <% end %>
        <%= link_to "https://appstimes.jp/privacy", target:"_blank" do %>
        <span class="info-list">プライバシーポリシー</span>
        <% end %>
        <span class="info-list copyright"><i class="far fa-copyright"></i>2018 AppsTimes</span>
      </div>
    </div>
  </footer>

<!-- Go to www.addthis.com/dashboard to customize your tools -->
<!-- <script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-5c0f7a22c3812530"></script> -->

</body>
</html>
